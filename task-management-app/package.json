{
    "name": "task-management-app",
    "version": "1.0.0",
    "description": "Collaborative task management app with drag-and-drop interface and real-time updates",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "cd backend && npm run dev",
        "client": "cd frontend && npm start",
        "build": "cd frontend && npm run build",
        "start": "cd backend && npm start",
        "test": "npm run test:client && npm run test:server",
        "test:client": "cd frontend && npm test",
        "test:server": "cd backend && npm test",
        "lint": "npm run lint:client && npm run lint:server",
        "lint:client": "cd frontend && npm run lint",
        "lint:server": "cd backend && npm run lint",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
    },
    "dependencies": {
        "concurrently": "^8.2.0"
    },
    "devDependencies": {
        "eslint": "^8.0.0",
        "prettier": "^3.0.0"
    },
    "keywords": [
        "task-management",
        "react",
        "nodejs",
        "mongodb",
        "typescript",
        "socketio",
        "drag-drop",
        "collaboration"
    ],
    "author": "Baskoro Rizky Adiputra",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Bazzoro/task-management-app.git"
    },
    "bugs": {
        "url": "https://github.com/Bazzoro/task-management-app/issues"
    },
    "homepage": "https://github.com/Bazzoro/task-management-app#readme",
    "workspaces": [
        "frontend",
        "backend"
    ]
}